@model IEnumerable<Online_game_store.Models.Game>

@{
    /**/

    ViewBag.Title = "Index";
}

<h1 class="text-center text-success">Our Games</h1>
<hr />
<div style="text-align: end">
    @if (User.IsInRole("Admin"))
    {
        <a href="@Url.Action("Create")" class="btn btn-success outline fab" data-toggle="tooltip" title="Add new game">
            <i class="glyphicon glyphicon-plus"></i>
        </a>
    }
</div>
<br />
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" style="width:300px" />
                </td>
                <td>
                    @Html.ActionLink(item.Name, "Details", new { id = item.GameId }, new { @class = "text-success" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manufacturer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a href="@Url.Action("AddToShoppingCart", "ShoppingCarts", new { id=item.GameId})" class="btn btn-success outline viewMore">
                            <i class="glyphicon glyphicon-shopping-cart"></i>
                        </a>
                        @Html.ActionLink("Edit", "Edit", new { id = item.GameId }, new { @class = "btn btn-success outline viewMore" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.GameId }, new { @class = "btn btn-danger outline viewMore " })
                    </td>
                }
                else
                {
                    <td>
                        <a href="@Url.Action("AddToShoppingCart", "ShoppingCarts", new { id=item.GameId})" class="btn btn-success outline viewMore">
                            <i class="glyphicon glyphicon-shopping-cart"></i>
                        </a>
                    </td>
                }

            </tr>
        }
    </tbody>

</table>


@section scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

<style>

    .fab {
        border-radius: 100%;
    }

    .outline {
        background-color: transparent;
        color: inherit;
        transition: all .25s;
    }

    .btn-success.outline {
        color: #5cb85c;
    }

    .btn-success.outline:hover {
        color: #fff;
    }

    .viewMore {
        height: 40px;
        margin: 5px;
        font-size: 16px;
        text-align: center;
        padding: 10px;
    }

    .pagination > .active > a, .pagination > .active > span, .pagination > .active > a:hover, .pagination > .active > span:hover, .pagination > .active > a:focus, .pagination > .active > span:focus {
        background-color: #5cb85c;
        border-color: #5cb85c;
    }

    .pagination > li > a, .pagination > li > span {
        color: #5cb85c;
    }

    a {
        color: #5cb85c;
    }

	.btn-danger.outline{
		color:red;
	}

	.btn-danger.outline:hover{
		color: #fff;
	}

</style>
